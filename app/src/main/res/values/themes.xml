        <item name="android:drawableStart">@drawable/ic_gray_search</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_solid_white_radius_20</item>
    </style>

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
